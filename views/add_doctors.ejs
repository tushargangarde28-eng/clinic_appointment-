<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>ClinicSys - Doctors</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <link href="assets/css/style.css" rel="stylesheet">
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <div class="container">
    <a class="navbar-brand" href="/dashboard">ClinicSys</a>
    <div class="ms-auto">
      <a class="btn btn-light me-2" href="/dashboard">Dashboard</a>
      <a class="btn btn-outline-light" href="/appointments">Appointments</a>
    </div>
  </div>
</nav>

<main class="container py-5">
  <div class="d-flex justify-content-between mb-3">
    <h3 class="mb-0">Doctors</h3>
    <div>
      <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addDoctorModal">+ Add Doctor</button>
    </div>
  </div>

  <div class="card shadow-sm">
    <div class="card-body">
      <div class="table-responsive">
<table id="doctorsTable" class="table table-striped table-bordered align-middle text-center shadow-sm">
  <thead class="table-primary">
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Specialization</th>
      <th>In - Out</th>
      <th>Avg (min)</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% for(let i=0; i<doctors.length; i++) { %>
      <tr>
        <td><%= i+1 %></td>
        <td><%= doctors[i].doctor_name %></td>
        <td><%= doctors[i].doctor_specialization %></td>
        <td>
          <span class="badge bg-success"><%= doctors[i].doctor_in_time %></span> 
          -
          <span class="badge bg-danger"><%= doctors[i].doctor_out_time %></span>
        </td>
        <td><span class="badge bg-info text-dark"><%= doctors[i].avg_checkup_minutes %> Min</span></td>
        <td>
          <div class="btn-group" role="group">
            <a href="/edit_doctors/<%- doctors[i].doctor_id %>" 
               class="btn btn-sm btn-outline-primary">
               <i class="bi bi-pencil"></i> Edit
            </a>
            <a href="/Delete_doctors/<%- doctors[i].doctor_id %>" 
               class="btn btn-sm btn-outline-danger"
               onclick="return confirm('Are you sure you want to delete this doctor?');">
               <i class="bi bi-trash"></i> Delete
            </a>
          </div>
        </td>
      </tr>
    <% } %>
  </tbody>
</table>
      </div>
      <div id="noDoctors" class="text-muted text-center py-4 <% if(doctors.length>0){ %>d-none<% } %>">No doctors yet. Add a doctor to get started.</div>
    </div>
  </div>
</main>

<!-- Add Doctor Modal -->
<div class="modal fade" id="addDoctorModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <form id="addDoctorForm" action="/save_doctor" method="POST">
        <div class="modal-header bg-primary text-white">
          <h6 class="modal-title">Add Doctor</h6>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <input type="hidden" name="doctor_id">
          <input type="hidden" name="staff_id" value="<%= staff.staff_id %>">

          <div class="mb-2">
            <label class="form-label small">Doctor Name</label>
            <input type="text" name="doctor_name" class="form-control" required>
          </div>

          <div class="mb-2">
            <label class="form-label small">Specialization</label>
            <input type="text" name="doctor_specialization" class="form-control" required>
          </div>

          <div class="row g-2">
            <div class="col-6">
              <label class="form-label small">In Time</label>
              <input type="time" name="doctor_in_time" class="form-control" required>
            </div>
            <div class="col-6">
              <label class="form-label small">Out Time</label>
              <input type="time" name="doctor_out_time" class="form-control" required>
            </div>
          </div>

          <div class="mb-2 mt-2">
            <label class="form-label small">Avg. Checkup Minutes</label>
            <input type="number" name="avg_checkup_minutes" class="form-control" min="5" value="15" required>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary w-100">Save Doctor</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Edit Doctor Modal -->
<div class="modal fade" id="editDoctorModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <form id="editDoctorForm" action="/update_doctor" method="POST">
        <div class="modal-header bg-primary text-white">
          <h6 class="modal-title">Edit Doctor</h6>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <input type="hidden" name="doctor_id" id="edit_doctor_id">
          <input type="hidden" name="staff_id" value="<%= staff.staff_id %>">

          <div class="mb-2">
            <label class="form-label small">Doctor Name</label>
            <input type="text" name="doctor_name" id="edit_doctor_name" class="form-control" required>
          </div>

          <div class="mb-2">
            <label class="form-label small">Specialization</label>
            <input type="text" name="doctor_specialization" id="edit_doctor_specialization" class="form-control" required>
          </div>

          <div class="row g-2">
            <div class="col-6">
              <label class="form-label small">In Time</label>
              <input type="time" name="doctor_in_time" id="edit_doctor_in_time" class="form-control" required>
            </div>
            <div class="col-6">
              <label class="form-label small">Out Time</label>
              <input type="time" name="doctor_out_time" id="edit_doctor_out_time" class="form-control" required>
            </div>
          </div>

          <div class="mb-2 mt-2">
            <label class="form-label small">Avg. Checkup Minutes</label>
            <input type="number" name="avg_checkup_minutes" id="edit_avg_checkup_minutes" class="form-control" min="5" required>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary w-100">Update Doctor</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<script>
  // Edit button functionality
  const editButtons = document.querySelectorAll('.btn-outline-primary');
  const editModal = new bootstrap.Modal(document.getElementById('editDoctorModal'));

  editButtons.forEach(btn => {
    btn.addEventListener('click', function(e) {
      e.preventDefault();
      const row = this.closest('tr');
      const cells = row.querySelectorAll('td');
      const doctorId = this.getAttribute('href').split('/').pop();

      document.getElementById('edit_doctor_id').value = doctorId;
      document.getElementById('edit_doctor_name').value = cells[1].innerText;
      document.getElementById('edit_doctor_specialization').value = cells[2].innerText;

      const times = cells[3].innerText.split(' - ');
      document.getElementById('edit_doctor_in_time').value = times[0].trim();
      document.getElementById('edit_doctor_out_time').value = times[1].trim();

      document.getElementById('edit_avg_checkup_minutes').value = cells[4].innerText.replace(' Min','');

      editModal.show();
    });
  });
</script>
</body>
</html>
