<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>ClinicSys - Appointments</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    body { background-color: #f8f9fa; }
    footer { margin-top: 50px; }
    .modal-lg { max-width: 900px; }
    .doctor-pill { transition: 0.2s; }
    .doctor-pill:hover { background: #0d6efd; color: #fff !important; }
  </style>
</head>
<body>

<!-- NAVBAR -->
<nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
  <div class="container">
    <a class="navbar-brand fw-bold" href="/">ClinicSys</a>
    <div class="ms-auto">
      <a class="btn btn-light me-2" href="/dashboard">Dashboard</a>
      <a class="btn btn-outline-light" href="/add_doctors">Doctors</a>
    </div>
  </div>
</nav>

<!-- MAIN -->
<main class="container py-5">

  <!-- Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="fw-bold mb-0">Appointments</h3>
    <button class="btn btn-primary shadow-sm" data-bs-toggle="modal" data-bs-target="#bookModal">
      + Book Appointment
    </button>
  </div>

  <!-- Doctors Filter Pills -->
  <div class="mb-4">
    <div class="d-flex flex-wrap gap-2">
      <% for (var i = 0; i < doctors.length; i++) { %>
        <a href="/appointments?doctor_id=<%= doctors[i].doctor_id %>" 
           class="doctor-pill btn btn-sm btn-outline-primary d-flex align-items-center justify-content-between px-3 py-1 rounded-pill shadow-sm"
           style="min-width: 120px; font-size: 0.875rem; white-space: nowrap;">
          <span class="d-flex align-items-center">
            <i class="bi bi-person me-1"></i><%= doctors[i].doctor_name %>
          </span>
          <span class="badge bg-primary text-white rounded-pill ms-2" style="font-size: 0.75rem;">
            <%= doctors[i].total_appointments || 0 %>
          </span>
        </a>
      <% } %>
    </div>
  </div>

  <!-- Appointments Table -->
  <div class="card shadow-sm">
    <div class="card-body">
      <div class="table-responsive">
        <table id="appointmentsTable" class="table table-striped table-bordered align-middle shadow-sm">
          <thead class="table-primary text-center">
            <tr>
              <th>#</th>
              <th>Doctor</th>
              <th>Patient Name</th>
              <th>Mobile</th>
              <th>Disease Note</th>
              <th>Date</th>
              <th>Status</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% for (let i = 0; i < appointments.length; i++) { %>
              <tr>
                <td class="text-center"><%= i+1 %></td>
                <td class="text-center"><%= appointments[i].doctor_id %></td>
                <td><%= appointments[i].patient_name %></td>
                <td><%= appointments[i].patient_mobile %></td>
                <td><%= appointments[i].patient_disease_note %></td>
                <td class="text-center">
                  <%= new Date(appointments[i].appointment_date).toLocaleDateString() %>
                </td>
                <td class="text-center">
                  <span class="badge 
                    <%= appointments[i].appointment_status === 'Scheduled' ? 'bg-warning text-dark' : 
                        appointments[i].appointment_status === 'Completed' ? 'bg-success' : 
                        'bg-secondary' %>">
                    <%= appointments[i].appointment_status %>
                  </span>
                </td>
                <td class="text-center">
                  <div class="btn-group" role="group">
                    <a href="/appointments/details/<%- appointments[i].appointment_id %>" 
                       class="btn btn-sm btn-info text-white">
                       <i class="bi bi-eye"></i> Details
                    </a>

                    <!-- Edit Button (Opens Modal) -->
                    <button type="button" 
                            class="btn btn-sm btn-outline-primary edit-btn"
                            data-bs-toggle="modal" 
                            data-bs-target="#editModal"
                            data-id="<%= appointments[i].appointment_id %>"
                            data-doctor="<%= appointments[i].doctor_id %>"
                            data-name="<%= appointments[i].patient_name %>"
                            data-mobile="<%= appointments[i].patient_mobile %>"
                            data-address="<%= appointments[i].patient_address %>"
                            data-disease="<%= appointments[i].patient_disease_note %>"
                            data-date="<%= new Date(appointments[i].appointment_date).toISOString().split('T')[0] %>"
                            data-status="<%= appointments[i].appointment_status %>">
                      <i class="bi bi-pencil"></i> Edit
                    </button>

                    <a href="/Delete_appointments/<%- appointments[i].appointment_id %>" 
                       class="btn btn-sm btn-outline-danger"
                       onclick="return confirm('Are you sure you want to delete this appointment?');">
                       <i class="bi bi-trash"></i> Delete
                    </a>
                  </div>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
      <div id="noAppointments" class="text-muted text-center py-4 d-none">
        No appointments yet.
      </div>
    </div>
  </div>

</main>

<!-- FOOTER -->
<footer class="bg-dark text-light text-center py-3">
  <div class="container">
    <small>&copy; <%= new Date().getFullYear() %> ClinicSys. All rights reserved.</small>
  </div>
</footer>


<!-- Book Appointment Modal -->
<div class="modal fade" id="bookModal" tabindex="-1" aria-labelledby="bookModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header bg-primary text-white">
        <h5 class="modal-title" id="bookModalLabel">Book Appointment</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/save_appointment" method="POST">
          <div class="row g-3">
            <!-- Doctor ID -->
            <div class="col-md-6">
              <label for="doctor_id" class="form-label">Select Doctor</label>
              <select id="doctor_id" name="doctor_id" class="form-select" required>
                <% for (var i = 0; i<doctors.length;i++) { %>
                <option value="<%-doctors[i].doctor_id %>"><%= doctors[i].doctor_name %></option>
                <% } %>
              </select>
            </div>

            <!-- Patient Name -->
            <div class="col-md-6">
              <label for="patient_name" class="form-label">Patient Name</label>
              <input type="text" id="patient_name" name="patient_name" class="form-control" placeholder="Enter patient name" required>
            </div>

            <!-- Patient Mobile -->
            <div class="col-md-6">
              <label for="patient_mobile" class="form-label">Patient Mobile</label>
              <input type="tel" id="patient_mobile" name="patient_mobile" class="form-control" placeholder="Enter mobile number" required>
            </div>

            <!-- Patient Address -->
            <div class="col-md-6">
              <label for="patient_address" class="form-label">Patient Address</label>
              <textarea id="patient_address" name="patient_address" class="form-control" rows="1" placeholder="Enter address" required></textarea>
            </div>

            <!-- Disease Note -->
            <div class="col-12">
              <label for="patient_disease_note" class="form-label">Disease Note</label>
              <textarea id="patient_disease_note" name="patient_disease_note" class="form-control" rows="2" placeholder="Enter disease details"></textarea>
            </div>

            <!-- Appointment Date -->
            <div class="col-md-6">
              <label for="appointment_date" class="form-label">Appointment Date</label>
              <input type="date" id="appointment_date" name="appointment_date" class="form-control" required>
            </div>
          </div>

          <div class="mt-4 text-end">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Book Appointment</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Edit Appointment Modal -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header bg-primary text-white">
        <h5 class="modal-title" id="editModalLabel">Edit Appointment</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="editForm" action="/update_appointment" method="POST">
          <input type="hidden" name="appointment_id" id="edit_id">
          <div class="row g-3">
            <!-- Doctor -->
            <div class="col-md-6">
              <label for="edit_doctor_id" class="form-label">Doctor</label>
              <select id="edit_doctor_id" name="doctor_id" class="form-select" required>
                <% for (var i = 0; i<doctors.length;i++) { %>
                  <option value="<%-doctors[i].doctor_id %>"><%= doctors[i].doctor_name %></option>
                <% } %>
              </select>
            </div>

            <!-- Patient Name -->
            <div class="col-md-6">
              <label for="edit_name" class="form-label">Patient Name</label>
              <input type="text" id="edit_name" name="patient_name" class="form-control" required>
            </div>

            <!-- Mobile -->
            <div class="col-md-6">
              <label for="edit_mobile" class="form-label">Mobile</label>
              <input type="tel" id="edit_mobile" name="patient_mobile" class="form-control" required>
            </div>

            <!-- Address -->
            <div class="col-md-6">
              <label for="edit_address" class="form-label">Address</label>
              <textarea id="edit_address" name="patient_address" class="form-control" rows="1" required></textarea>
            </div>

            <!-- Disease -->
            <div class="col-12">
              <label for="edit_disease" class="form-label">Disease Note</label>
              <textarea id="edit_disease" name="patient_disease_note" class="form-control" rows="2"></textarea>
            </div>

            <!-- Date -->
            <div class="col-md-6">
              <label for="edit_date" class="form-label">Date</label>
              <input type="date" id="edit_date" name="appointment_date" class="form-control" required>
            </div>

            <!-- Status -->
            <div class="col-md-6">
              <label for="edit_status" class="form-label">Status</label>
              <select id="edit_status" name="appointment_status" class="form-select">
                <option value="Scheduled">Scheduled</option>
                <option value="Completed">Completed</option>
                <option value="Cancelled">Cancelled</option>
              </select>
            </div>
          </div>

          <div class="mt-4 text-end">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Update Appointment</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
  // Auto-fill Edit Modal
  document.querySelectorAll(".edit-btn").forEach(btn => {
    btn.addEventListener("click", function() {
      document.getElementById("edit_id").value = this.dataset.id;
      document.getElementById("edit_doctor_id").value = this.dataset.doctor;
      document.getElementById("edit_name").value = this.dataset.name;
      document.getElementById("edit_mobile").value = this.dataset.mobile;
      document.getElementById("edit_address").value = this.dataset.address;
      document.getElementById("edit_disease").value = this.dataset.disease;
      document.getElementById("edit_date").value = this.dataset.date;
      document.getElementById("edit_status").value = this.dataset.status;
    });
  });
</script>

</body>
</html>
