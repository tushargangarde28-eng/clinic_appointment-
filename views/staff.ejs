<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>ClinicSys - Staff Login/Register</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f5f7fa;
      font-family: 'Segoe UI', sans-serif;
    }

    /* Navbar */
    .navbar {
      box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

    /* Main container */
    .main-container {
      min-height: 85vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    /* Card buttons */
    .auth-card {
      max-width: 400px;
      padding: 2rem;
      background-color: #fff;
      border-radius: 1rem;
      box-shadow: 0 8px 25px rgba(0,0,0,0.1);
      text-align: center;
    }

    .btn-primary {
      background-color: #0d6efd;
      border-radius: 0.5rem;
      border: none;
      padding: 0.75rem;
    }

    .btn-outline-primary {
      color: #0d6efd;
      border-color: #0d6efd;
      border-radius: 0.5rem;
      padding: 0.75rem;
    }

    .btn-outline-primary:hover {
      background-color: #0d6efd;
      color: #fff;
    }

    /* Toast container */
    .toast-container {
      z-index: 2000;
    }
  </style>
</head>
<body>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <div class="container">
    <a class="navbar-brand fw-bold" href="/">ClinicSys</a>
    <div class="ms-auto">
      <a href="#" class="btn btn-light">Home</a>
    </div>
  </div>
</nav>

<!-- Main Content -->
<div class="main-container">
  <div class="auth-card">
    <h3 class="fw-bold mb-3">Staff Portal</h3>
    <p class="text-muted mb-4">Login or register to manage clinic data</p>
    <div class="d-grid gap-3">
      <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#loginModal">Login</button>
      <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#registerModal">Register</button>
    </div>
  </div>
</div>

<!-- Login Modal -->
<div class="modal fade" id="loginModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content p-3">
      <form id="loginForm" action="/staff/login" method="POST">
        <div class="modal-header bg-primary text-white rounded-top">
          <h6 class="modal-title">Staff Login</h6>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body py-4">
          <div class="form-floating mb-3">
            <input type="email" name="staff_email" class="form-control" id="loginEmail" placeholder="Email" required>
            <label for="loginEmail">Email</label>
          </div>
          <div class="form-floating mb-3">
            <input type="password" name="staff_password" class="form-control" id="loginPassword" placeholder="Password" required>
            <label for="loginPassword">Password</label>
          </div>
          <button class="btn btn-primary w-100 btn-lg" type="submit">Login</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Register Modal -->
<div class="modal fade" id="registerModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content p-3">
      <form id="registerForm" action="/staff/register" method="POST">
        <div class="modal-header bg-primary text-white rounded-top">
          <h6 class="modal-title">Staff Registration</h6>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body py-4">
          <div class="form-floating mb-3">
            <input type="text" name="staff_name" class="form-control" id="regName" placeholder="Full Name" required>
            <label for="regName">Full Name</label>
          </div>
          <div class="form-floating mb-3">
            <input type="text" name="staff_hospital_name" class="form-control" id="regHospital" placeholder="Hospital" required>
            <label for="regHospital">Hospital</label>
          </div>
          <div class="form-floating mb-3">
            <input type="tel" name="staff_mobile" class="form-control" id="regMobile" placeholder="Mobile" required>
            <label for="regMobile">Mobile</label>
          </div>
          <div class="form-floating mb-3">
            <input type="email" name="staff_email" class="form-control" id="regEmail" placeholder="Email" required>
            <label for="regEmail">Email</label>
          </div>
          <div class="form-floating mb-3">
            <input type="password" name="staff_password" class="form-control" id="regPassword" placeholder="Password" required>
            <label for="regPassword">Password</label>
          </div>
          <button class="btn btn-primary w-100 btn-lg" type="submit">Register</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
  // Auto-show login modal after 3 seconds
  window.addEventListener('load', () => {
    setTimeout(() => {
      const loginModal = new bootstrap.Modal(document.getElementById('loginModal'));
      loginModal.show();
    }, 3000);
  });
</script>

</body>
</html>
