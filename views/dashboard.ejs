<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>ClinicSys - Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="assets/css/style.css" rel="stylesheet">
</head>
<body>
<!-- NAVBAR -->
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <div class="container">
    <a class="navbar-brand" href="index.html">ClinicSys</a>
    <div class="ms-auto d-flex align-items-center">
      <span id="navStaffName" class="text-white me-3"></span>
      <a href="/add_doctors" class="btn btn-outline-light me-2">Doctors</a>
      <a href="/appointments" class="btn btn-light me-2">Appointments</a>
      <a href="/logout" id="logoutBtn" class="btn btn-danger text-white">Logout</a>
    </div>
  </div>
</nav>

<!-- MAIN -->
<main class="container py-5">

  <!-- Welcome -->
  <div id="welcomeCard" class="card shadow-sm mb-4">
    <div class="card-body d-flex justify-content-between align-items-center">
      <div>
        <h4 id="welcomeTitle" class="mb-1">Welcome,<%= staff.staff_name %></h4>
        <p id="welcomeSub" class="mb-0 text-muted">Manage doctors, appointments and profile</p>
      </div>
      <div>
        <a href="/profile" class="btn btn-outline-primary">My Profile</a>
      </div>
    </div>
  </div>

<!-- Quick Stats -->
<div class="row g-4 mb-4">
  <div class="col-md-3">
    <div class="card text-center shadow-sm">
      <div class="card-body">
        <h5>Total Doctors</h5>
        <h3 id="statDoctors"><%= stats.doctors %></h3>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card text-center shadow-sm">
      <div class="card-body">
        <h5>Total Patients</h5>
        <h3 id="statPatients"><%= stats.patients %></h3>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card text-center shadow-sm">
      <div class="card-body">
        <h5>Appointments Today</h5>
        <h3 id="statAppointments"><%= stats.today %></h3>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card text-center shadow-sm">
      <div class="card-body">
        <h5>Pending Requests</h5>
        <h3 id="statPending"><%= stats.pending %></h3>
      </div>
    </div>
  </div>
</div>
<!-- Main Cards -->
<div class="row g-4 mb-4">
  <!-- Doctors -->
  <div class="col-md-4">
    <div class="card h-100 shadow-sm">
      <div class="card-body">
        <h5 class="card-title">Doctors</h5>
        <p class="card-text">
          Total doctors: <span id="cardDoctors"><%= stats.doctors %></span>
        </p>
        <a href="/add_doctors" class="btn btn-primary">Manage Doctors</a>
      </div>
    </div>
  </div>

  <!-- Appointments -->
  <div class="col-md-4">
    <div class="card h-100 shadow-sm">
      <div class="card-body">
        <h5 class="card-title">Appointments</h5>
        <p class="card-text">
          Upcoming appointments: <span id="cardAppointments"><%= stats.upcoming %></span>
        </p>
        <a href="/appointments" class="btn btn-primary">View Appointments</a>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="col-md-4">
    <div class="card h-100 shadow-sm">
      <div class="card-body">
        <h5 class="card-title">Quick Actions</h5>
        <p class="card-text">Add a doctor or book a new appointment.</p>
        <div class="d-flex flex-wrap gap-2">
          <a href="/add_doctors" class="btn btn-outline-primary">Add Doctor</a>
          <a href="/appointments" class="btn btn-outline-primary">Book Appointment</a>
        </div>
      </div>
    </div>
  </div>
</div>
        
        <!-- Recent Appointments -->
        <div class="card shadow-sm mb-4">
          <div class="card-body">
            <h5 class="card-title">Today's Appointments</h5>
            <table class="table table-hover">
              <thead class="table-light">
                <tr>
                  <th>#</th>
                  <th>Patient</th>
                  <th>Doctor</th>
                  <th>Date</th>
                  <th>Status</th>
                </tr>
              </thead>
        <tbody>
          <% if (todaysAppointments.length > 0) { %>
            <% todaysAppointments.forEach((appt, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= appt.patient_name %></td>
                <td><%= appt.doctor_name %></td>
                <td><%= new Date(appt.appointment_date).toLocaleDateString() %></td>
                <td>
                  <span class="badge 
                    <%= appt.appointment_status === 'Pending' ? 'bg-warning text-dark' :
                        appt.appointment_status === 'Completed' ? 'bg-success' :
                        appt.appointment_status === 'Upcoming' ? 'bg-info' :
                        'bg-secondary' %>">
                    <%= appt.appointment_status %>
                  </span>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="5" class="text-center text-muted">No appointments today.</td>
            </tr>
          <% } %>
        </tbody>

    </table>
  </div>
</div>

  <!-- Notifications -->
  <div class="card shadow-sm mb-4">
    <div class="card-body">
      <h5 class="card-title">Notifications</h5>
      <ul class="list-group">
        <li class="list-group-item">System update scheduled on <strong>25 Sep 2025</strong>.</li>
        <li class="list-group-item">3 new patients registered today.</li>
        <li class="list-group-item">Dr. Sophia Brown will be unavailable next week.</li>
      </ul>
    </div>
  </div>

</main>

<!-- FOOTER -->
<footer class="bg-dark text-light text-center py-3">
  <p class="mb-0">Â© 2025 ClinicSys. All Rights Reserved.</p>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="assets/js/script.js"></script>
</body>
</html>
